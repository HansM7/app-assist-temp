generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model user {
  id        Int      @id @default(autoincrement())
  name      String
  dni       String
  email     String
  password  String
  role      String   @default("USER")
  createdAt DateTime @default(now())
}

model assistance {
  id      Int @id @default(autoincrement())
  user_id Int

  date DateTime
}
